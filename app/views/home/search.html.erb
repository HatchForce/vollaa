<%= form_tag 'home/results', :method => :get, :class => 'search_form' do %>

    <div class="span2 side_nav">
      <label class="radio"><%= radio_button_tag :property_for, "buy" %>Buy</label><br/><br/>
      <label class="radio"><%= radio_button_tag :property_for, "rent" %>Rent</label>
    </div>
    <div style="width: 900px;margin: 0 auto;">
      <div class="search_box">


        <ul class="nav nav-pills">
          <li><label class="radio regular_search"><%= radio_button_tag 'search', '', :default => :selected %>
            Regular </label></li>
          <li><label class="radio advanced_search"><%= radio_button_tag 'search', '' %>Advanced </label></li>
        </ul>

        <div class="row form-inline">
          <div class="span3 form-inline">
            <%= label_tag :what %>
            <%= text_field_tag :what %>
            <p class="help-inline">2bhk, house</p>
          </div>
          <div class="span3 form-inline">
            <%= label_tag :where %>
            <%= text_field_tag :where %>
            <p class="help-inline">city, state</p>
          </div>
          <div class="span form-inline" style="padding-bottom: 20px;">
            <%#= label_tag :search, raw("&nbsp;") %>
            <%= submit_tag :search, :class => 'btn btn-primary' %>
          </div>
        </div>
        <div class="for_hide" style="padding-top: 118px;color: #ffffff;">Advanced search</div>
        <div class="row">
          <div class="adv_search"  style="padding-left: 70px;">
            <%= render :partial => 'adv_search' %>
          </div>
        </div>
<% end %>

</div>
</div>